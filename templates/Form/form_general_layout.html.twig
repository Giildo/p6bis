{% use 'form_div_layout.html.twig' %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="alert alert-danger">
        {%- for error in errors -%}
            {{ error.message }}<br />
        {%- endfor -%}
        </div>
    {%- endif -%}
{%- endblock form_errors -%}

{% block form_row %}
    {{ form_widget(form) }}
{% endblock %}