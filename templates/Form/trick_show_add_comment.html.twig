{% use '/Form/form_general_layout.html.twig' %}

{% block form %}
    <section class="section-form" id="comment-form">
        {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="form-fields">
            {{ form_widget(form.comment) }}
        </div>

        <button type="submit" id="commentButton">
            <span class="material-icons">question_answer</span>
            <span id="commentButtonText">Ajouter un commentaire</span>
        </button>

        {{ form_end(form) }}
    </section>
{% endblock %}