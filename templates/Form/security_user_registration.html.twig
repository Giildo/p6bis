{% use '/Form/form_general_layout.html.twig' %}

{% block form %}
    <section class="section-form">
        {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="form-fields">
            {{ form_widget(form.username) }}
            <div class="field-group">
                {{ form_widget(form.firstName) }}
                {{ form_widget(form.lastName) }}
            </div>
            <div class="field-group">
                {{ form_widget(form.mail) }}
                {{ form_widget(form.mail) }}
            </div>
            <div class="field-group">
                {{ form_widget(form.password) }}
                {{ form_widget(form.password) }}
            </div>
            <div id="gcu-group">
                {{ form_widget(form.gcuValidation) }}
                <label for="user_registration_gcuValidation">
                    J'accepte les <a href="{{ path('GCU') }}" target="_blank">conditions générales d'utilisation</a>
                </label>
            </div>
        </div>

        <button type="submit"><span>S'enregistrer</span></button>

        {{ form_end(form) }}
    </section>
{% endblock %}